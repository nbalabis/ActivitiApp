<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Activity</h1>
  <div class="col-6 offset-3">
    <form action="/activities/<%= activity._id %>?_method=PUT" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="activity[title]" value="<%= activity.title %>" required>
        <div class="invalid-feedback">
          Please provide a title
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="activity[location]" value="<%= activity.location %>" required>
        <div class="invalid-feedback">
          Please provide a location
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload Images</label>
        <input class="form-control" type="file" id="image" name="images" multiple>
      </div>
      <div class="mb-3">
        <% activity.images.forEach((img, i) => { %>
        <img class="img-thumbnail" src="<%= img.thumbnail %>" alt="">
        <div class="form-check-inline">
          <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
        </div>
        <label for="image-<%= i %>">Delete?</label>
        <% }) %>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="number" class="form-control" id="price" name="activity[price]" value="<%= activity.price %>" required>
          <div class="invalid-feedback">
            Please provide a price
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="activity[description]" rows="3" required><%= activity.description %></textarea>
        <div class="invalid-feedback">
          Please provide a description
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/activities/<%= activity._id %>" class="btn btn-outline-secondary">Cancel</a>
      </div>
    </form>
    <form class="mt-3 text-center" action="/activities/<%= activity._id %>?_method=DELETE" method="POST">
      <button class="btn btn-outline-danger">Delete</button>
    </form>
  </div>
</div>