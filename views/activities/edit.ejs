<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Activity</h1>
  <div class="col-6 offset-3">
    <form action="/activities/<%= activity._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="activity[title]" value="<%= activity.title %>">
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="activity[location]" value="<%= activity.location %>">
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Url</label>
        <input type="text" class="form-control" id="image" name="activity[image]" value="<%= activity.image %>">
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="number" class="form-control" id="price" name="activity[price]" value="<%= activity.price %>">
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="activity[description]" rows="3"><%= activity.description %></textarea>
      </div>
      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/activities/<%= activity._id %>" class="btn btn-outline-secondary">Cancel</a>
      </div>
    </form>
    <form class="mt-3 text-center" action="/activities/<%= activity._id %>?_method=DELETE" method="POST">
      <button class="btn btn-outline-danger">Delete</button>
    </form>
  </div>
</div>